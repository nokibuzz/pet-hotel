generator mongo_client {
    provider = "prisma-client-js"
    output   = "../generated/mongo"
}

datasource mongodb {
    provider = "mongodb"
    url      = env("MONGO_DATABASE_URL")
}

model Message {
    id         String   @id @default(auto()) @map("_id") @mongodb.ObjectId
    senderId   String
    receiverId String
    content    String
    timestamp  DateTime @default(now())
    chatId     String
}
